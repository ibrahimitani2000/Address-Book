@model Address_Book.ViewModels.PeopleInOrganizationViewModel

@{
    ViewData["Title"] = "People";
}

<h2>List of People in Organziation @Model.organization.Name</h2>

<p>
    <a asp-action="Create">Create new Organization</a>
</p>
<table class="table">
    <thead>
        <tr>


            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Street
            </th>
            <th>
                City
            </th>
            <th>
                PostCode
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.people)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Street)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostCode)
                </td>


                <td>
                    <a asp-controller="People" asp-action="Remove" asp-route-id="@item.Id">Remove from Organization</a> |
                    <a asp-controller="People" asp-action="Details" asp-route-id="@item.Id">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
